<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.db8.db8admin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/db8_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/db8_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.DB8Admin">
        <activity
            android:name=".data.ReportActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".data.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".data.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".data.start.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.DB8Admin.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>